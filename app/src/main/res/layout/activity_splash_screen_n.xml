<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_screen"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/BackgroundColor"
    tools:context=".Activity.SplashScreenNActivity">

    <ImageView
        android:id="@+id/iv_logoF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/f_photo"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/iv_logoV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/v_photo"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/iv_logoJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/j_photo"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"/>

</LinearLayout>